@page "/contact"

<div class="container mt-5">
    <section class="contact-section">
        <div class="row">
            <div class="col-md-6">
                <h2 class="display-4 mb-4">Get in Touch</h2>
                <p class="lead">We'd love to hear from you. Please feel free to reach out with any questions or inquiries.</p>

                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" placeholder="Your First Name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" placeholder="Your Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Your Email">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Type your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>

            <div class="col-md-6">
                <!-- Map Section -->
                <div class="map-section">
                    <iframe width="100%"
                            height="300"
                            frameborder="0"
                            scrolling="no"
                            marginheight="0"
                            marginwidth="0"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3403.192245702303!2d74.34710431465704!3d32.56607946001928!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3919659cb8f408e3%3A0x8f6b530063d83f9!2sUniversity%20of%20Sialkot!5e0!3m2!1sen!2s!4v1675522731189!5m2!1sen!2s"
                            allowfullscreen></iframe>
                </div>

                <!-- Business Details -->
                <div class="business-details mt-4">
                    <h3 class="mb-3">Our Office</h3>
                    <p><strong>Address:</strong> University of Sialkot, Sialkot</p>
                    <p><strong>Phone:</strong> +92 344 3242515</p>
                    <p><strong>Email:</strong> SAmiAbdulRehmanShadan@uskt.edu.pk</p>
                </div>
            </div>
        </div>
    </section>
</div>

