@page "/math"

<div class="container mt-5">
    <h3 class="text-center mb-4">Math Expression Evaluator</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="input-group mb-3">
                <label for="expression" class="input-group-text">Enter Expression:</label>
                <input id="expression" @bind="expression" type="text" class="form-control" />
                <button @onclick="EvaluateExpression" class="btn btn-primary">Evaluate</button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(result))
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="alert alert-success" role="alert">
                    <p class="mb-0">Result:</p>
                    <p>@result</p>
                </div>
            </div>
        </div>
    }

</div>
